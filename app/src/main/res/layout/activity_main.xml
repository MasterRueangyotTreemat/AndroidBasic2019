<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="Menu"/>
    <Button
        android:id="@+id/colorChageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Change"
        android:layout_marginTop="30dip"/>
    <Button
        android:id="@+id/restaurantRandomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Random"
        android:layout_marginTop="30dip"/>
    <Button
        android:id="@+id/colorMixerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Mixer"
        android:layout_marginTop="30dip"/>
    <Button
        android:id="@+id/editTextDemoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Text Demo"
        android:layout_marginTop="30dip"/>
    <Button
        android:id="@+id/seekBarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seek Bar"
        android:layout_marginTop="30dip"/>
    <Button
        android:id="@+id/textButtonChangeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Button Change"
        android:layout_marginTop="30dip"/>
</LinearLayout>